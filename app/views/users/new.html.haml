%h1 New user

- form_for @user, :html => { :multipart => true } do |f|
  = f.error_messages

  %p
    = f.label :first_name
    %br/
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br/
    = f.text_field :last_name
  %p
    = f.label :avatar
    %br/
    = f.file_field :avatar
  %p= f.submit 'Create'

= link_to 'Back', users_path